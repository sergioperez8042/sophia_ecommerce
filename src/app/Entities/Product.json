{
  "name": "Product",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nombre del producto"
    },
    "slug": {
      "type": "string",
      "description": "URL amigable"
    },
    "description": {
      "type": "string",
      "description": "Descripción breve"
    },
    "long_description": {
      "type": "string",
      "description": "Descripción detallada"
    },
    "price": {
      "type": "number",
      "description": "Precio del producto"
    },
    "compare_price": {
      "type": "number",
      "description": "Precio anterior para mostrar descuento"
    },
    "category_id": {
      "type": "string",
      "description": "ID de la categoría"
    },
    "category_name": {
      "type": "string",
      "description": "Nombre de la categoría"
    },
    "image_url": {
      "type": "string",
      "description": "Imagen principal del producto"
    },
    "gallery_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Galería de imágenes adicionales"
    },
    "ingredients": {
      "type": "string",
      "description": "Lista de ingredientes naturales"
    },
    "benefits": {
      "type": "string",
      "description": "Beneficios y propiedades"
    },
    "usage": {
      "type": "string",
      "description": "Modo de uso"
    },
    "stock": {
      "type": "number",
      "default": 0,
      "description": "Cantidad en inventario"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Producto destacado"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "description": "Producto activo"
    },
    "skin_type": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "grasa",
          "seca",
          "mixta",
          "sensible",
          "normal",
          "todos"
        ]
      },
      "description": "Tipos de piel recomendados"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Etiquetas del producto"
    }
  },
  "required": [
    "name",
    "slug",
    "price",
    "category_id"
  ]
}